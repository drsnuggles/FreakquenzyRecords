<center>
<h1>All users</h1>

<table>
	<tr>
		<th>Name</th>
		<th>Description</th>
		<th>Bands</th>
	</tr>
	<% @users.each do |u| %>
		<tr>
		<td><%= link_to( u.name, u) %></td>
		<td><%= u.description %></td>
		<% @band_users.each do |bu| %>
			<% if bu.user_id == u.id %>
				<td><%= link_to( Band.find_by_id(bu.band_id).name, Band.find_by_id(bu.band_id) ) %></td>
			<% end %>
	<% end %>
<% end %>
		</tr>
</tr>
</tr>
</center>
