<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
        <%= link_to "Home", root_path, :class => 'brand' %>
        <ul class="nav">
        <li><a href="/newsitems/index">News</a></li>
        <li><a href="/bands/">Bands</a></li>
        <li><%= link_to "Users", '/users' %></li>
        <%= form_tag "/search_results", :method => "get",:class => "navbar-search pull-left", :authenticity_token => true do %>
            <%= text_field_tag :search, nil, :placeholder => "Search here", :class => "search-query input-medium" %>
        <% end %>
        <% if user_signed_in? %>
            <li><%= link_to "Edit your account", edit_user_registration_path %></li>
            <li><%= link_to "Logout", destroy_user_session_path, :method => :delete %></li>
        <% else %>
            <li><%= link_to "Login", new_user_session_path %></li>
        <% end %>
        <% if current_user.try("admin?") %>
            <li><a href="/users/admin">Admin-area</a></li>
        <% end %>
        </ul>
    </div>
  </div>
</div><!-- end navbar -->
